<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="?actionBarSize">

            <androidx.cardview.widget.CardView
                android:id="@+id/btnMenu"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:shadowColor="#D3D1D8"
                android:layout_gravity="center_vertical"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_5sdp"
                app:cardBackgroundColor="@color/white">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/icon_menu"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/grey"
                    android:layout_height="wrap_content"
                    android:text="Delivery To"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/orange"
                    android:layout_height="wrap_content"
                    android:text="sdfhjksd"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:shadowColor="#D3D1D8"
                android:layout_gravity="center_vertical"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_5sdp"
                app:cardBackgroundColor="@color/white">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/test"
                    android:scaleType="centerCrop"
                    android:id="@+id/encrypted" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:fontFamily="@font/sofia_semi_bold"
            android:text="What would you like\nto order"
            android:textSize="@dimen/_25ssp"/>

        
        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="horizontal">

            <SearchView
                android:background="@drawable/background_edittext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:queryBackground="@android:color/transparent"
                android:iconifiedByDefault="false"
                android:inputType="text"
                android:searchIcon="@drawable/icon_search"
                android:textStyle="normal"
                android:textSize="16sp"
                android:queryHint="Find for food..."
                android:layout_height="@dimen/_35sdp"
                android:id="@+id/svProduct"/>

                <View
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="0dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center_vertical"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardBackgroundColor="@color/white">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/icon_search_option"
                    android:padding="@dimen/_10sdp"
                    android:scaleType="centerCrop"
                    android:id="@+id/icon_search_option" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:id="@+id/rcvCategory"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtCategory"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:textSize="@dimen/_18ssp"
            android:text="Category"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:id="@+id/rcvProduct"/>
    </LinearLayout>
</layout>